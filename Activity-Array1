def AskInfo():
    global checking, numreplace
    numgrades = str(input("How many grades will you average? "));
    numlist = list(numgrades);
    numreplace = 0
        
    for i in range(len(numlist)):
        numascii = ord(numlist[i]);
        if (numascii < 48 or numascii > 57):
            print("Please enter a positive whole number.");
            AskInfo();
        else: 
            checking = True;
        
    if (int(numgrades) == 0):
        print("Bye. Thank you!");
        AskInfo();
        
    if (checking == True):
        numgrades = int(numgrades);
        passorfail = CalcAverage(numgrades);
        print("Your average is", passorfail);
        main();

def CalcAverage(gradenum):
    global grades, numreplace
    totalgrade = 0 
    grades = []
    
    while numreplace < gradenum:
        entgrade = str(input("Enter a grade:"));
        if (entgrade == "."):
            print("Please enter a number between 0-100.");
            CalcAverage(gradenum);
        gradelist = list(entgrade);
        lengrade = len(entgrade);
        validinp = True;
        decimalchk = 0;
        for i in range(lengrade):
            if ((gradelist[i]) == "."):
                decimalchk = decimalchk + 1
        if (decimalchk > 1):
            print("Please enter a number between 0-100.");
            CalcAverage(gradenum);
            
        i = 0;
        while i < lengrade:
            numascii = ord(gradelist[i]);
            if (numascii < 46 or numascii > 57 or numascii == 47):
                print("Please enter a number between 0-100.");
                validinp = False;
                CalcAverage(gradenum);
            else: 
                i = i + 1;
                
        if (validinp == True and (0 <= float(entgrade) <= 100)):
            grades.append(float(entgrade));
            numreplace = numreplace + 1;
        else:
            print("Please enter a number between 0-100.");        
            CalcAverage(gradenum);
 
        
    for i in range(len(grades)):
        totalgrade = totalgrade + grades[i];
        
    average = totalgrade / gradenum;
    return average;


def main():
    AskInfo();
    
#Call to Main
if __name__ == "__main__":
    main();
    
    
